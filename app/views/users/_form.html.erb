<section class="py-5 m-5" style=" width:60% !important; margin:auto !important">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Update User</p>
                <%= form_with url: user_path(@user), method: "patch" do |f| %>
                  <% if user.errors.any? %>
                    <div style="color: red">
                      <ul>
                        <% user.errors.each do |error| %>
                          <li><%= error.full_message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <%= f.label :username,class: "form-label" %><br />
                      <%= f.text_field :username, autofocus: true, autocomplete: "username",class: "form-control" %>
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.label :email, class: "form-label" %><br />
                      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.label :password,class: "form-label" %>
                      <br />
                      <%= f.password_field :password, autocomplete: "new-password",class: "form-control" %>
                    </div>
                  </div>
                  <% if user.type == "Expert" %>
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <%= f.label :profession, class: "form-label" %><br />
                        <%= f.text_field :profession, autofocus: true, autocomplete: "profession",class: "form-control" %>
                      </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <%= f.label :service, class: "form-label" %><br />
                        <%= f.text_field :service, autofocus: true, autocomplete: "service",class: "form-control" %>
                      </div>
                    </div>
                  <% end %>
                  <br>
                  <div class="actions d-flex justify-content-center mx-4 mb-3 mb-lg-4 tomato-clr mx-5 ">
                    <%= f.submit "Update", class: "btn tomato-clr txt-white "%>
                  </div>
                <% end %>
              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
